#include <stdio.h>

int isPalindrome(int n) {
    int reversed = 0, original = n, remainder;
    while(n != 0) {
        remainder = n % 10;
        reversed = reversed * 10 + remainder;
        n /= 10;
    }
    return original == reversed;
}

int main() {
    int n;
    printf("Enter a number: ");
    scanf("%d", &n);
    if(isPalindrome(n))
        printf("%d is a palindrome.\n", n);
    else
        printf("%d is not a palindrome.\n", n);
    return 0;
}
